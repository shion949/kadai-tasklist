<h1>メッセージ新規作成ページ</h1>

<%= form_with(model: @tasks, local: true) do |f| %>
　<% if @tasks.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @tasks.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'メッセージ' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>
  
  <%= f.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る', tasks_path %>